@import "normalize.styl"
@import "nib"
@import "font.styl"
@import "rslides.styl"
@import url(https://fonts.googleapis.com/css?family=Slabo+27px);
@import url(https://fonts.googleapis.com/css?family=Dosis);
@import url(https://fonts.googleapis.com/css?family=Roboto);
// COLORS
  // PALETA-A  http://www.colourlovers.com/palette/1473/Ocean_Five
  celeste-A = #00A0B0
  cafe-A = #6A4A3C
  rojo-A = #CC333F
  naranja-A = #EB6841
  amarillo-A = #EDC951
  // PALETA-B http://www.colourlovers.com/palette/4134684/Piece_Of_Heaven
  celeste-B = #3C91E6
  morado-B = #662E9B
  rojo-B = #EA3546
  naranja-B = #F86624
  amarillo-B = #F9C80E
  // OTHER COLORS
  gris = #1E1E1E
  celeste-claro = #00dbff
// ///////////////////FUENTES//////////////////////////////
  font1 = 'Slabo 27px', serif
  font2 = 'Dosis', sans-serif
  font3 = 'Roboto', sans-serif
// ///////////////////ELEMENTOS//////////////////////////////
h1
ul
li
figure
  margin 0
  padding 0
a
  text-decoration none
body
  height 80em
// ///////////////////REUTILIZABLE//////////////////////////////
.absolute
  position absolute
.list
  list-style-type none
.relative
  position relative
.fixed-nav
  position fixed
  top 0
  left 0
  right 0
.container-large
  max-width 1000px
  margin 0 auto
// ///////////////////HEADER//////////////////////////////
.Header
  &-head
    display block
    background rgba( gris, 0.85);
    // #F5F5F5
    color white
    // background-image: url("../image/logo/fondo.png");
    overflow hidden
  &-img
    display block
    margin .4em auto
  &-lema
    top 2.3rem
    text-align center
    right 2rem
    width 8em
    color white
  &-nav
    transition 5s
    display block
    z-index 9999
    padding .25em
    background celeste-B
    &-list
      display flex
      justify-content center
    &-item
      font-family font3
      text-transform uppercase
      // font-weight bold
      padding .5em
      display block
      color white
    &-ico
      margin-right .3em

// ////////////////////SLIDES/////////////////////////////

.rslides-btns
  &_nav
    z-index 3
    position absolute
    top 43%
    left 0
    opacity 0.8
    text-indent -9999px
    overflow hidden
    text-decoration none
    height 3.5em
    width 2.1em
    background transparent url("../image/themes.gif") no-repeat left top
    &.next
      left auto
      background-position right top
      right 0
    &:focus
      outline none
  &_tabs
    margin-top 10px
    text-align center
    position absolute
    bottom 0
    left 0
    right 0
    z-index 3
    li
      display inline
      margin-right 5px
    a
      text-indent -9999px
      overflow hidden
      border-radius 15px
      background white
      display inline-block
      box-shadow inset 0 0 2px 0 rgba(0,0,0,.5)
      width .8em
      height .8em
  &_here a
    background rgba( celeste-B , 1)

// ////////////////////BUTTONS/////////////////////////////
.Buttons
  margin-top 1em
  display flex
  justify-content space-around
  flex-wrap wrap
  &-item
    margin-bottom .5em
    img
      width 240px
      height 100%
      border-radius 1em

// // ////////////////////MAIN/////////////////////////////
.Main
  margin-top .5em
.Principal
  width 44em
  float right
.Secundario
  width 18em
  float left
.header
  text-align center
  padding .2em
  color morado-B
  font-weight bold
  font-family font3
  border-bottom 3px dashed morado-B
  font-size 25px
  .ico
    margin-right .3em
// // ////////////////////NOTICE/////////////////////////////
.Notice
  &-Articles
    font-size 16px
    padding .5em
    &-item
      margin 1em 0
      display flex
      flex-wrap wrap
    &-title
      display block
      font-weight: 1500
      color rojo-A
      font-size 20px
      padding-bottom .3em
      &.fig
        display none
    &-text
      font-family font3
      width 27em
      padding 0 .5em
      .text
        text-align justify
    &-img
      height 240px
      order -1
// // ////////////////////COMUNICATES/////////////////////////////
.Comunicates
  &-container
    padding .5em
    margin-top 1em
    display flex
    justify-content space-around
  &-item
    border 1px solid celeste-B
    &-text
      background rgba( black, .8)
      display none
      text-align center
      padding 1em
      font-family font3
      color celeste-claro
      top 0
      left 0
      right 0
      bottom 0
    &-title
      padding 1rem 0
      text-align center
      font-size 20px
    &-list
      display inline-block
      bottom 1em
      right 1em
      left 1em
      color white
      li
        float left
        font-size 25px
        padding 9%
    &:hover>&-text
      display block
