@import "normalize.styl"
@import "nib"
@import "font.styl"
@import "rslides.styl"
@import url(https://fonts.googleapis.com/css?family=Slabo+27px);
@import url(https://fonts.googleapis.com/css?family=Dosis);
@import url(https://fonts.googleapis.com/css?family=Roboto);
// COLORS
  // PALETA-A  http://www.colourlovers.com/palette/1473/Ocean_Five
  celeste-A = #00A0B0
  cafe-A = #6A4A3C
  rojo-A = #CC333F
  naranja-A = #EB6841
  amarillo-A = #EDC951
  // PALETA-B http://www.colourlovers.com/palette/4134684/Piece_Of_Heaven
  celeste-B = #3C91E6
  morado-B = #662E9B
  rojo-B = #EA3546
  naranja-B = #F86624
  amarillo-B = #F9C80E
  // OTHER COLORS
  gris = #1E1E1E
  celeste-claro = #00dbff
// ///////////////////FUENTES//////////////////////////////
  font1 = 'Slabo 27px', serif
  font2 = 'Dosis', sans-serif
  font3 = 'Roboto', sans-serif
// ///////////////////ELEMENTOS//////////////////////////////
h1
ul
li
figure
  margin 0
  padding 0
a
  text-decoration none
body
  height 80em
// ///////////////////REUTILIZABLE//////////////////////////////
.absolute
  position absolute
.list
  list-style-type none
.relative
  position relative
.fixed-nav
  position fixed
  top 0
  left 0
  right 0
// ///////////////////HEADER//////////////////////////////
.Header
  &-head
    display block
    background rgba( gris, 0.85);
    // #F5F5F5
    color white
    // background-image: url("../image/logo/fondo.png");
    overflow hidden
  &-img
    display block
    margin .4em auto
  &-lema
    top 2.3rem
    text-align center
    right 2rem
    width 8em
    color white
  &-nav
    display block
    z-index 9999
    padding .25em
    background celeste-B
    &-list
      display flex
      justify-content center
    &-item
      font-family font3
      text-transform uppercase
      // font-weight bold
      padding .5em
      display block
      color white
    &-ico
      margin-right .3em

// ////////////////////SLIDES/////////////////////////////
.Slides
  max-width 1000px
  height auto
  margin 0 auto
.rslides-btns
  &_nav
    z-index 3
    position absolute
    top 43%
    left 0
    opacity 0.7
    text-indent -9999px
    overflow hidden
    text-decoration none
    height 56px
    width 35px
    background transparent url("../image/themes.gif") no-repeat left top
    &.next
      left auto
      background-position right top
      right 0
    &:focus
      outline none
  &_tabs
    margin-top 10px
    text-align center
    position absolute
    bottom 0
    left 0
    right 0
    z-index 3
    li
      display inline
      margin-right 5px
    a
      text-indent -9999px
      overflow hidden
      border-radius 15px
      background white
      display inline-block
      box-shadow inset 0 0 2px 0 rgba(0,0,0,.5)
      width .8em
      height .8em
  &_here a
    background rgba( celeste-B , 1)
