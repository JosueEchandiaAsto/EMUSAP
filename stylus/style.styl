@import "normalize.styl"
@import "nib"
@import "font.styl"
@import "rslides.styl"
@import url(https://fonts.googleapis.com/css?family=Slabo+27px);
@import url(https://fonts.googleapis.com/css?family=Dosis);
@import url(https://fonts.googleapis.com/css?family=Roboto);
// COLORS
  // PALETA-A  http://www.colourlovers.com/palette/1473/Ocean_Five
  celeste-A = #00A0B0
  cafe-A = #6A4A3C
  rojo-A = #CC333F
  naranja-A = #EB6841
  amarillo-A = #EDC951
  // PALETA-B http://www.colourlovers.com/palette/4134684/Piece_Of_Heaven
  celeste-B = #3C91E6
  morado-B = #662E9B
  rojo-B = #EA3546
  naranja-B = #F86624
  amarillo-B = #F9C80E
  // OTHER COLORS
  gris = #1E1E1E
  celeste-claro = #00dbff
  amarillo-claro = #FFA500
  // PALETA-C http://www.colourlovers.com/palette/4217590/Wandering_Canadian
  rojo-C = #EE4E82
  rosado-C = #FD675A
  naranja-C = #ff912f
  verde-C = #bae43c
  celeste-C = #4e9ff2
// ///////////////////FUENTES//////////////////////////////
  font1 = 'Slabo 27px', serif
  font2 = 'Dosis', sans-serif
  font3 = 'Roboto', sans-serif
// ///////////////////ELEMENTOS//////////////////////////////
h1
ul
h2
h3
li
figure
  margin 0
  padding 0
a
  text-decoration none
body
  height 80em
  background rgb(231, 231, 231)
h2
h3
  font-size 1em
  display inline-block
  font-weight normal
  &.bold
    font-weight normal
// ///////////////////REUTILIZABLE//////////////////////////////
.absolute
  position absolute
.list
  list-style-type none
.relative
  position relative
.fixed-nav
  position fixed
  top 0
  left 0
  right 0
.container-large
  max-width 1000px
  margin 0 auto
.white
  background white
.Body-container
  max-width 1050px
  margin 0 auto
// ///////////////////HEADER//////////////////////////////
.Header
  &-head
    display block
    // background rgba( gris , 0.85)
    // #F5F5F5
    // background celeste-B
    background-image: url("../image/footer/background.jpg");
    overflow hidden
  &-img
    display block
    margin .4em auto
  &-lema
    top 2.3rem
    text-align center
    right 2rem
    width 8em
    color white
  &-nav
    transition 5s
    display block
    z-index 9999
    padding .25em
    background #5b5656
    &-list
      display flex
      justify-content center
    &-item
      font-family font3
      text-transform uppercase
      // font-weight bold
      padding .5em
      display block
      color white
    &-ico
      margin-right .3em

// ////////////////////SLIDES/////////////////////////////
.Slides
  margin-top 2px
  max-width 1100px

.rslides-btns
  &_nav
    z-index 3
    position absolute
    top 43%
    left 0
    opacity 0.8
    text-indent -9999px
    overflow hidden
    text-decoration none
    height 3.5em
    width 2.1em
    background transparent url("../image/themes.gif") no-repeat left top
    &.next
      left auto
      background-position right top
      right 0
    &:focus
      outline none
  &_tabs
    margin-top 10px
    text-align center
    position absolute
    bottom 0
    left 0
    right 0
    z-index 3
    li
      display inline
      margin-right 5px
    a
      text-indent -9999px
      overflow hidden
      border-radius 15px
      background white
      display inline-block
      box-shadow inset 0 0 2px 0 rgba(0,0,0,.5)
      width .8em
      height .8em
  &_here a
    background rgba( celeste-B , 1)

// ////////////////////BUTTONS/////////////////////////////
.Buttons
  margin-top 1em
  display flex
  justify-content space-around
  flex-wrap wrap
  &-item
    margin-bottom .5em
    width 240px
    height 100%
    color white
    text-align center
    padding 1rem 0
    border-radius 1em
    background naranja-C
    font-size 18px
    font-family font3

// // ////////////////////MAIN/////////////////////////////
.Main
  margin-top .5em
  overflow hidden
.Principal
  width 44em
  float right
.Secundario
  width 17em
  float left
.header
  text-align center
  padding .5em .2em
  color white
  // border-radius 1em
  font-weight bold
  font-family font3
  // border 3px solid celeste-C
  font-size 22px
  .ico
    margin-right .3em
.header
.Buttons-item
  &.green
    background verde-C
  &.rojo
    background rojo-C
  &.celeste
    background celeste-C
  &.rosado
    background rosado-C
  &.naranja
    background naranja-C
  .ico
    margin-right .5em
// // ////////////////////NOTICE/////////////////////////////
.Notice
  &-Articles
    font-size 16px
    padding .5em
    &-item
      margin 1em 0
      display flex
      flex-wrap wrap
    &-title
      display block
      font-weight: 1500
      color celeste-B
      font-size 20px
      padding-bottom .3em
      &.fig
        display none
    &-text
      font-family font3
      width 27em
      padding 0 .5em
      .text
        text-align justify
    &-img
      height 240px
      order -1
// // ////////////////////COMUNICATES/////////////////////////////
.Comunicates
  &-container
    user-select none
    padding .5em
    margin-top 1em
    display flex
    justify-content space-around
  &-item
    border 1px solid celeste-B
    &-text
      background rgba( black, .8)
      display none
      text-align center
      padding 1em
      font-family font3
      color celeste-claro
      top 0
      left 0
      right 0
      bottom 0
    &-title
      padding 1rem 0
      text-align center
      font-size 20px
    &-list
      display inline-block
      bottom 1em
      right 1em
      left 1em
      color white
      li
        float left
        font-size 25px
        padding 9%
    &:hover>&-text
      display block

// // /////////////////////SECUNDARIO/////////////////////////////
.Social
.Destacado
.Contact
  .header
    color white
  .ico
    font-size 20px
.container-secundario
  padding .5em
.Social
  &-container
    margin-top .5em
    text-align center
  &-item
    padding 0 .5em
    font-size 35px
    &.fb
      color #46629E
    &.tw
      color #48AAE6
    &.g
      color #D73D32
.Contact
  &-img
    width 256px
// // /////////////////////COMMENT/////////////////////////////
.Comment
  background-image url("../image/footer/footer.jpg")
  width 100%
  overflow hidden
  text-align center
  &-expan
    width .5em
    height 2em
    top 1em
    left .5em
    z-index 3
    border-radius 5px
    &-botton
      border-top 1.5em solid amarillo-claro
      border-left 1em solid transparent
      border-right 1em solid transparent
  &-Title
    display inline-block
    text-align center
  &-Form
    display inline-block
    text-align center
    padding 1em
    .input
      color amarillo-claro
      width 400px
      border-radius 1em
      font-size 20px
      outline none
      display block
      border none
      padding .4em
      margin 0 1rem 1rem 1rem
    .send
      height 2em
      resize none
    .button
      background amarillo-claro
      color white
      margin 0 auto
      padding .5em 2em
      font-size 18px
// // /////////////////////FOOTER/////////////////////////////
.Footer
  background-color #2C2C2C
  display flex
  left 0
  right 0
  align-items flex-start
  background-repeat no-repeat
  background-position center
  align-items center
  justify-content space-around
  flex-wrap nowrap
  padding 1em
  &-Acerca
    order -1
  &-Develop
    order 1
    max-width 15em
    a
      color white
      margin-left .5em
  &-text
    order 0
  &-text
  &-Acerca
  &-Develop
    color white
    max-width 20em
    font-family: "calibri"
    text-align justify
    &-title
      font-family font3
      font-size 18px
      color celeste-claro
    p
      margin .4em 0
  &-Social
    order 2
    &-red
      width 2em
      float left
      margin-right 1em
      a
        font-size 2em
        color white
    &-qr
      float right
      img
        width 100px
